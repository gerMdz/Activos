{% extends 'base.html.twig' %}

{% block title %}{{ 'ServerData'|trans }} {{ 'create_new'|trans }}{% endblock %}

{% block body %}
    <div class="col-sm-11 mx-auto mt-3">
        <h4>{{ 'ServerData'|trans }} {{ 'create_new'|trans }}</h4>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ server_datum.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ server_datum.name }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ server_datum.summary }}</td>
            </tr>
            <tr>
                <th>Datauser</th>
                <td> <a href="{{ path('server_data_ver', {'datum': server_datum.datauser }) }}">
                        <i class="fa fa-eye"> </i>
                    </a>

                </td>
            </tr>
            <tr>
                <th>Datapass</th>
                <td> <a href="{{ path('server_data_ver', {'datum': server_datum.datapass }) }}">
                        <i class="fa fa-eye"> </i>
                    </a>
                </td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('server_data_index') }}">
            {% include('default/_back.html.twig') %}
        </a>

        <a href="{{ path('server_data_edit', {'id': server_datum.id}) }}">
            {% include('default/_edit.html.twig') %}
        </a>

        {{ include('server_data/_delete_form.html.twig') }}
    </div>
{% endblock %}
